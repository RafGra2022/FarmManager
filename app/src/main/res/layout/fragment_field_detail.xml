<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/fields"
    tools:context=".field.FieldDetailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <TextView
            android:layout_marginTop="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="Działka:"/>

        <LinearLayout
            android:layout_marginTop="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="40dp"
                android:background="@drawable/ic_baseline_chevron_left_70"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="2023"/>

            <Button
                android:layout_marginStart="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_baseline_chevron_right_70"/>

        </LinearLayout>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/agricultural_treatment"
            android:layout_width="wrap_content"
            android:minWidth="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            app:cornerRadius="10dp"
            android:textStyle="italic"
            android:text="Zabiegi Agrotechniczne"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:minWidth="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            app:cornerRadius="10dp"
            android:textStyle="italic"
            android:text="Środki Ochrony roślin"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:minWidth="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            app:cornerRadius="10dp"
            android:textStyle="italic"
            android:text="Nawożenie"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:minWidth="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            app:cornerRadius="10dp"
            android:textStyle="italic"
            android:text="Siew"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:minWidth="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            app:cornerRadius="10dp"
            android:textStyle="italic"
            android:text="Plon"/>

        <TextView
            android:layout_marginTop="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="Uprawa: Brak"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>